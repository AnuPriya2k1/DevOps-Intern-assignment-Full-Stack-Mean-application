# frontend/Dockerfile - safe build in CI/VM environments (uses npx to call angular)
FROM node:18-bullseye AS builder
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source
COPY . .

# Build using project's Angular CLI directly (avoid passing unknown args)
# Use configuration 'production' which is standard for angular.json
RUN npx -y @angular/cli@latest build --configuration production

# Serve built files with nginx
FROM nginx:stable-alpine
# Adjust the dist path below if your angular.json outputs a different folder name
COPY --from=builder /app/dist/angular-15-crud /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
