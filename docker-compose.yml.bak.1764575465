services:
  mongodb:
    image: mongo:6
    restart: unless-stopped
    volumes:
      - mongo-data:/data/db
    environment:
      MONGO_INITDB_ROOT_USERNAME: root
      MONGO_INITDB_ROOT_PASSWORD: examplepassword
    networks:
      - app-net

  backend:
    build: ./backend
    # remove 'image:' or set it to a valid lowercase name if you push to Docker Hub later
    # image: mydockerhubusername/backend:latest
    depends_on:
      - mongodb
    environment:
      MONGO_URL: mongodb://root:examplepassword@mongodb:27017/yourdbname?authSource=admin
      PORT: 3000
    restart: unless-stopped
    networks:
      - app-net

  frontend:
    build: ./frontend
    # image: mydockerhubusername/frontend:latest
    depends_on:
      - backend
    networks:
      - app-net

  nginx:
    image: nginx:stable-alpine
    volumes:
      - ./deploy/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./frontend/dist/angular-15-crud:/usr/share/nginx/html:ro
    ports:
      - "80:80"
    depends_on:
      - backend
    networks:
      - app-net

volumes:
  mongo-data:

networks:
  app-net:
    driver: bridge
